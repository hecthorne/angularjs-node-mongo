doctype html
html.no-js(ng-app='sitehosting.app')
	head
		meta(charset='utf-8')
		title Angular, Jade, NodeJs, ExpressJS, MongoDB
		meta(name='description' content='')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		// build:css styles/extras.css
		link(rel='stylesheet',href='styles/bootstrap.min.css')
		// endbuild
		
		// build:css styles/main.css
		link(rel='stylesheet' href='styles/style.css')
		// endbuild
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#cliente') Sitehosting
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(ng-show="autenticado")
							a(href='') {{usuariologado.nome}}
						li
							a(href='') {{title}}
						li(ng-show="autenticado")
							a(href='',ng-click="sair()") Sair
		.container
			.starter-template
				div(ng-view='')
			
		// build:js scripts/plugins.js
		script(src='bower_components/jquery/dist/jquery.js')
		script(src="bower_components/angular/angular.js")
		script(src="bower_components/angular-aria/angular-aria.js")     
		script(src="bower_components/angular-animate/angular-animate.js")
		script(src="bower_components/angular-resource/angular-resource.js")
		script(src="bower_components/angular-cookies/angular-cookies.js")
		script(src="bower_components/angular-sanitize/angular-sanitize.js")
		script(src="bower_components/angular-touch/angular-touch.js")
		script(src="bower_components/angular-route/angular-route.js")
		script(src="bower_components/angular-ui-utils/ui-utils.js")
		script(src="bower_components/ng-table/ng-table.js")
		script(src="bower_components/underscore/underscore.js")
		// endbuild

		// build:js scripts/main.js
		//APP
		script(src='app/app.module.js')

		//CLIENTES
		script(src='app/cliente/cliente.module.js')
		script(src='app/cliente/cliente.index.controller.js')
		script(src='app/cliente/cliente.cadastrar.controller.js')
		script(src='app/cliente/cliente.editar.controller.js')

		//LOGIN
		script(src='app/login/login.module.js')
		script(src='app/login/login.index.controller.js')

		// endbuild